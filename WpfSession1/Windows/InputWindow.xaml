<Window x:Class="WpfAutovokzalDb.Windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Диалоговое окно" Height="180" Width="250" WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Name="img" MinWidth="200" MinHeight="50" HorizontalAlignment="Center"/>
        <StackPanel Name="textPanel">
            <TextBlock Name="helpTextBlock" HorizontalAlignment="Center" Text="Подтвердите, что вы не робот"/>
            <TextBox Name="responceTextBox" MaxLength="0" />
        </StackPanel>
        <Button Content="Подтвердить" Name="okButton" Click="okButton_Click"/>
    </StackPanel>
</Window>
