<UserControl x:Class="WpfSession1.Control.WindowLocker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfSession1.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid x:Name="LockLayer" Background="Gray" Opacity="0.5" Visibility="Collapsed">
            <TextBlock x:Name="descriptionText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" Foreground="White"/>
            <TextBlock x:Name="CountdownText" Text="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" Foreground="White"/>
        </Grid>
    </Grid>
</UserControl>
