<Page x:Class="WpfSession1.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfSession1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Label Content="Логин:"/>
                <TextBox Name="loginTextBox" VerticalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Label Content="Пароль:"/>
                <PasswordBox Name="passwordPassBox" VerticalContentAlignment="Center"/>
            </StackPanel>
            <Button Content="Авторизоваться" Name="authorizationButton" Click="authorizationButton_Click"/>
            <Button Content="Войти как гость" Name="ghostButton" Click="ghostButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
